<% provide(:title, 'Home') %>
<div id="wrapper">
   <div id="col-three">

     <div id="about">
        <img class="logo" src="/assets/ko-opheader.png" alt="">
        <p class="text">KO-OP Mode is a recently formed studio in Montreal, focused on collaboration and game making. We're dedicated to forming a "record label" of high quality games, closely working with partners looking to establish themselves as passionate, experimental and engaging game makers.</p>
     <div id="menu">
         <div class="item"><a href="mailto:contact@ko-opmode.com">Contact</a></div>
         <div class="item"><a id="mailinglist" href="#mailing-list">Mailing List</a></div>
     </div>
     <!-- #menu -->

     </div>
     <!-- #about -->

     <div id="project-division"></div>
     <div id="project-container">
        <h2>Projects</h2>
        <% @projects.each do |project| %>
        <div id="project">
            <%= link_to "description/#{project.id}", {:id=>'inline'} do %>
                <%= image_tag(project.thumbnail.url, :size=>"300x190") %>
                <div class="title"> <%= project.name %> </div>
            <% end %>
        </div>
        <!-- Project -->
        <% end %>
     </div>
     <!-- Project Container -->

     <div style="display:none">
         <div id="mailing-list">
            <h2>Mailing List</h2>
            <%= render 'mailing_list_form' %>
         </div>
         <!-- #mailing-list -->
     </div>
   </div>
