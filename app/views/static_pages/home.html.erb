<% provide(:title, 'KO-OP Mode | Home') %>
<!-- KO-OP -->
<div class="ko-op">
    <div class="container">
        <!-- Phone & Tablet -->
        <div class="row top-med-spacer visible-phone visible-tablet">
            <div class="span12 center">
                <div class="row">
                    <div class="span4 offset4 visible-phone visible-tablet" >
                        <%= image_tag("ko-op.png", :class=>"bottom-small-spacer", :width=>"140px") %>
                        <p>KO-OP Mode is a new studio based out of Montreal. Stay in touch with us!</p>
                    </div>

                </div>
                <div class="row">
                    <div class="span12 visible-phone">
                        <a href="http://www.twitter.com/koopmode" onClick="_gaq.push(['_trackEvent', 'Links', 'click', 'Twitter-phone']);"><%= image_tag("twitter.png", :class=>"bottom-small-spacer", :width=>"48px", :style=>"margin-right:8px") %></a>
                        <a href="https://www.facebook.com/koopmode" onClick="_gaq.push(['_trackEvent', 'Links', 'click', 'Facebook-phone']);"><%= image_tag("fb.png",    :class=>"bottom-small-spacer", :width=>"48px", :style=>"margin-left:8px;margin-right:8px") %></a>
                        <a href="mailto:contact@ko-opmode.com" onClick="_gaq.push(['_trackEvent', 'Links', 'click', 'Mail-phone']);"><%= image_tag("mail.png", :class=>"bottom-small-spacer", :width=>"48px", :style=>"margin-left:8px") %></a>
                    </div>

                </div>
            </div>
        </div>

        <!-- Desktop -->
        <div class="row top-med-spacer visible-desktop" style="margin-bottom: -65px">
            <div class="span9">
                <%= image_tag("ko-op.png", :class=>"bottom-small-spacer", :width=>"80px") %>
            </div>

            <div class="span3">
                <a href="http://www.twitter.com/koopmode" onClick="_gaq.push(['_trackEvent', 'Links', 'click', 'Twitter']);"><%= image_tag("twitter.png", :class=>"bottom-small-spacer", :width=>"48px", :style=>"margin-right:8px") %></a>
                <a href="https://www.facebook.com/koopmode" onClick="_gaq.push(['_trackEvent', 'Links', 'click', 'Facebook']);"><%= image_tag("fb.png",    :class=>"bottom-small-spacer", :width=>"48px", :style=>"margin-left:8px;margin-right:8px") %></a>
                <a href="mailto:contact@ko-opmode.com" onClick="_gaq.push(['_trackEvent', 'Links', 'click', 'Mail']);"><%= image_tag("mail.png", :class=>"bottom-small-spacer", :width=>"48px", :style=>"margin-left:8px") %></a>
            </div>
        </div>
    </div>
</div>

<!-- Red Rover -->
<div class="red-rover">
    <div class="container project-container">
        <div class="row top-med-spacer bottom-med-spacer">
            <div class="span12 center">
                <div class="row">
                    <a href="http://www.flyredrover.com" onClick="_gaq.push(['_trackEvent', 'Links', 'click', 'RedRover']);">
                        <div class="span5 logo">
                            <%= image_tag("redrover.png", :class=>"bottom-small-spacer") %>
                            <p class="none">Red Rover is an experimental game about space exploration and the human voyage to Mars.</p>
                        </div>
                    </a>
                    <div class="span5 offset2">
                        <iframe width="100%" height="275" src="http://player.vimeo.com/video/47953922?byline=0&amp;portrait=0" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Skipping Stones -->
<div class="skipping-stones">
    <div class="container project-container">
        <div class="row top-med-spacer bottom-med-spacer">
            <div class="span12 center">
                <div class="row">
                    <div class="span5 logo">
                        <%= image_tag("skippingstones.png", :class=>"bottom-small-spacer") %>
                        <p>Skipping Stones is a sound and poetry toy about loss and self reflection. Throw stones and create music.</p>
                    </div>
                    <div class="span5 offset2">
                        <%= image_tag("stones.png") %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
