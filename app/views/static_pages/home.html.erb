<% provide(:title, 'Home') %>
<div class="container">
    <header>
        <div class="row" style="padding-top:26px">
            <div class="span4">
                <%= image_tag("/assets/ko-opheader.png", :size=>"168x215") %>
            </div>
            <div class="span8" style="text-align:right">
                <form class="form-inline">
                    <input type="text" placeholder="Mailing List">
                    <button type="submit" class="subscribe">Subscribe</button>
                    <a href="#"><%= image_tag("/assets/twitter_icon2.jpg", :size=>"18x14") %></a>
                    <a href="#"><%= image_tag("/assets/ko-opheader.png", :size=>"24x24") %></a>
                </form>
            </div>
        </div>
    </header>

    <section>
        <div class="row">
            <div class="span6">
                <%= image_tag(@projects[0].thumbnail.url, :size=>"600x380") %>
            </div>

            <div class="span6">
                <%= image_tag(@projects[1].thumbnail.url, :size=>"600x380") %>
            </div>
        </div>
    </section>

    <section class="blog">
        <div class="row">
            <div class="span12">
                <% @posts.each do |post|%>
                    <h3 class="title"><%= post.title %></h3>
                    <h6>posted <%= post.updated_at.strftime "%Y-%m-%d %H:%M:%S" %></h6>
                    <p><%=raw post.body %></p>
                <% end %>
            </div>
        </div>
    </section><!-- /blog -->
</div> <!-- /container -->

<footer class="footer navbar-fixed-bottom">
    <div class="row">
        <div class="span3">
            <p>Find us on Twitter: 
            <a href="http://twitter.com/seemo">Seemo</a> | 
            <a href="http://twitter.com/bzgeb">BZgeb</a></p>
        </div>
        <div class="span6">
            <p>Check out our friends:
            <a href="http://mrgs.ca/">MRGS</a> |
